<div>
<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
  <%= link_to 'Edit', edit_category_path(category) %>
  <%= link_to 'Delete', category_path(category), data: { confirm: 'Are you sure you want to delete this category?' }, method: :delete %><br/>
<% end %>
</div>
